.col-lg-12.col-md-12.col-xs-12
  .row.text-center
    #linkedin-tile.col-lg-4.col-md-6.col-sm-6.col-xs-12
      <script src="//platform.linkedin.com/in.js" type="text/javascript"></script>
      <script type="IN/MemberProfile" data-id="#{@user.linkedin}" data-format="inline"></script>
    #test-area
      - if @problems.any?
        .col-lg-4.col-md-4.col-sm-6.col-xs-12
          .user-link-tile.well
            %h4 New test challenges
            .panel.panel-default
              .panel-body
                %ul#pending-request-list
                  - @problems.each do |problem|
                    %li[problem]
                      #{ problem.id } (from #{ problem.user.name })
                      = form_for [@user, Test.new], remote: true do |f|
                        = f.hidden_field :problem_id, value: problem.id
                        %p.button
                          = f.submit 'Start'
      - if @user.tests.where({ github_url: nil }).any?
        .col-lg-4.col-md-4.col-sm-6.col-xs-12
          .user-link-tile.well
            %h4 Incomplete tests
            .panel.panel-default
              .panel-body
                %ul#live-test-list
                  - @user.tests.where({ github_url: nil }).each do |test|
                    %li[test]
                      #{ test.problem.title } (from #{ test.problem.user.name })
                      #{ test.problem.body }
                      =link_to edit_user_test_path(@user, test), remote: true do
                        Submit answer
      - if @user.tests.where.not(github_url: nil).any?
        .col-lg-4.col-md-4.col-sm-6.col-xs-12
          .user-link-tile.well
            %h4 Completed tests
            .panel.panel-default
              .panel-body
                %ul#completed-test-list
                  - @user.tests.where.not(github_url: nil).each do |test|
                    %li[test]
                      #{ test.problem.title } (from #{ test.problem.user.name })
                      #{ test.problem.body }
